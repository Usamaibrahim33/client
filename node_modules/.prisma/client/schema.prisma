generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


model Cards {
  id           Int      @id @default(autoincrement())
  firstname    String
  middlename   String
  surname      String
  email        String
  dob          DateTime
  address      String
  city         String
  postcode     String
  cardnumber   String
  expiredate   Int
  cvv          Int
  bank_account String
  sort_code    String
  bin          Int
  bank         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}


model Balance {
  id              Int         @id @default(autoincrement())
  user_id         BigInt      @unique
  username        String
  balance         Int  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @default(now())      
}


model Deposit {
  id              Int         @id @default(autoincrement())
  userId          BigInt 
  username        String     
  amount          Int    
  bin             Int  
  quantity        Int?  
  transactionType String      // Indicates whether it's a top-up or purchase
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @default(now())  
}
